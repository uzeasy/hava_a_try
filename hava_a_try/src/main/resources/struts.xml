<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="basicstruts2" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
        <action name="hello" class="com.uzeasy.action.HelloWorldAction" method="execute">
            <result name="success">/helloWorld.jsp</result>
        </action>
        <!--定义多个同名的Action，是否会产生冲突-->
        <action name="register" class="com.uzeasy.action.RegisterAction" method="execute">
            <result name="success">/thanks.jsp</result>
            <result name="input">/register.jsp</result>
        </action>
        <!-- The input method is inherited by class Register from class ActionSupport.-->
        <action name="registerInput" class="com.uzeasy.action.RegisterAction" method="input">
            <result name="input">/register.jsp</result>
        </action>
    </package>
</struts>